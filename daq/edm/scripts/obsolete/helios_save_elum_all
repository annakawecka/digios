#!/bin/bash -l
sdirname="saves"
fname="elum_saved_all"
fdate=`date +%Y-%m-%d.%H-%M`
sfile=$sdirname/$fname.$fdate

echo '#!/bin/bash -l' > $sfile
chmod +x $sfile

echo "########## Saving ELUM Params ##########"
echo "########## Saving Individual Params ##########"
echo "#Saving Individual Params" >> $sfile

VME="01"
DIG="2"
CH="0 1 2 3 4 5 6 7"

PVS="led_threshold raw_data_window channel_enable"

for a in $VME
do
  for b in $DIG
  do
    for c in $PVS
    do
      for d in $CH
      do 
        pv=VME"$a":MDIG"$b":"$c""$d"
        chpv=$(caget "$pv"_RBV | awk '{print $2}')
        echo 'caput' $pv $chpv >> $sfile
      done
    done
  done
done

date +%m/%d/%Y-%k:%M | awk '{print "#Save Finished "$1 $2}' >> $sfile
rm -rf edm/scripts/elum_saved
ln -s ../../$sfile edm/scripts/elum_saved
echo "########## Done Saving ELUM Params ###########"
exit

